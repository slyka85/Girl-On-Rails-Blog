

<%= form_for @post do |f| %>
<% if @post.errors.any? %>
<h2><%= pluralize(@post.errors.count, "error") %> prevented this post from saving:</h2>
<ul>
	<% @post.errors.full_messages.each do |message|%>
	<li>
		<%= message %>
		<% end %>
	</li>
</ul>
<% end %>

<%= f.label :title %>
<%= f.text_field :title, id:'post_title' %>
<br><br>

<%= f.label :content, "Write your article here" %> <br>
<%= f.text_area :content, id: 'post_content' %>
<br><br>

<%= f.label :image_link %>
<%= f.text_field :image_link %>
<br><br>

<%= f.submit %>

<% end %>
