    <!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="intro-header" style="background-image: linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), url('<%= @post.image_link%>')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <h3><span><%= @post.title%></span></h3>

                        <h2 class="subheading">Problems look mighty small from 150 miles up</h2>
                        <span class="meta">Posted by on <%= @post.created_at.strftime("%A, %b %d") %></span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Post Content -->
    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <p>
                        <%= markdown(@post.content) %>
                    </p>
                    <% if user_signed_in? %>
                    <div id="admin_links"> 

                        <%= link_to 'Edit Article', edit_post_path(@post) %>
                        <br>
                        <%= link_to 'Delete Article', post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete this article?"} %>
                    </div>
                  <% end %>


                        <br>
                           <%= link_to 'Back to Articles', root_path %>
                           <div style="height: 100px"></div>
                            <%= render 'disqus_comments' %>
                </div>
            </div>
          
        </div>

    </article>

    <hr>

